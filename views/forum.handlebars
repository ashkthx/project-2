<!-- Main Content -->
<div class="container">
    {{#each topics}}
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-preview">
                <a href="t/{{this.topicID}}">
                    <h2 class="post-title">{{this.topicSubject}}</h2>
                </a>
            </div>
        </div>
    </div>
    {{/each}}
        <!-- Pager -->
        <div class="clearfix">
            <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>
    </div>
</div>
</div>

<hr>