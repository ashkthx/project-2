<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <ul>
                {{#each wishes}}
                <li>
                    <div class="post-preview"><a href="post.html">
                            <p class="post-title"> {{this.title}}</p>
                        </a>
                        <p class="post-subtitle">{{this.subtitle}}</p>
                        <p class="post-body">{{this.body}}</p>
                        <p class="post-meta">{{this.postedby}}</p>
                    </div>
        </div>
        </li>
        {{/each}}
        </ul>
        {{!-- will delete the following post preview later but i kept it to show how it is gonna look like when we have
        posts in the database
        --}}
        <div class="post-preview">
            <a href="post.html">
                <h2 class="post-title">
                    Man must explore, and this is exploration at its greatest
                </h2>
                <h3 class="post-subtitle">
                    Problems look mighty small from 150 miles up
                </h3>
            </a>
            <p class="post-meta">Posted by
                <a href="#">Start Bootstrap</a>
                on September 24, 2019</p>
        </div>
        <hr>

        <!-- Pager -->
        <div class="clearfix">
            <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>
    </div>
</div>
</div>

