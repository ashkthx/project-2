<!-- Main Content -->
<div class="container">
    {{#each forums}}
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-preview">
                <a href="f/{{this.forumID}}">
                    <h2 class="post-title">{{this.forumName}}</h2>
                <h3 class="post-subtitle">
                    {{this.forumDescription}}
                </h3>
                </a>
            </div>
        </div>
    </div>
    {{/each}}
        <!-- Pager -->
        <div class="clearfix">
            <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
        </div>
    </div>
</div>
</div>

<hr>