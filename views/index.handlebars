<!-- Main Content -->
<div class="container">
    {{#each posts}}
    <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
            <div class="post-preview">
                <a href="post.html">
                    <h2 class="post-title">{{this.title}}</h2>
                <h3 class="post-subtitle">
                    {{this.subtitle}}
                </h3>
                </a>
                <p class="post-body">{{this.body}}</p>
                <p class="post-meta">{{this.postedBy}}</p>
            </div>
        </div>
    </div>
    {{/each}}
