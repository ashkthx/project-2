<!-- Main Content -->

{{#each posts}}
<a href="/p/{{this.id}}" class="forumwhite" author="{{this.UserId}}">
    <h2 class="post-title card-header header">
        {{this.postSubject}}
        {{#if this.displayDelete}}
            <i class="forumwhite fas fa-trash-alt delete-post" data-id="{{this.id}}"></i>
        {{/if}}
    </h2>

    <div class="card-body mb-2">
        <div class="post-subtitle nav-item" scope="col">
            <a class="nav-link">
                <h3>{{this.postBody}}</h3>
            </a>
        </div>
        <ul>
        {{#each Comments}}
            <li>
                {{this.commentBody}}
                {{#if this.displayDelete}}
                    <i class="forumwhite fas fa-trash-alt delete-comment" data-id="{{this.id}}"></i>
                {{/if}}
            </li>
        {{/each}}
        </ul>
        <input class="form-control mt-5 comment-body" data-id="{{this.id}}"></input>
        <button type="button" class="btn btn-secondary submit-comment mt-1" data-id="{{this.id}}">Submit Comment</button>
    </div>
</a>

{{/each}}
<!-- Pager -->
<div class="clearfix">
    <a class="btn btn-primary float-right mt-3" href="#">Older Posts &rarr;</a>
</div>
</div>
</div>
</div>

<hr>
